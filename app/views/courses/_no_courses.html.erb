<!-- app/views/courses/_no_courses.html.erb -->
<div class="text-center py-5">
  <div class="empty-state-illustration mb-4">
    <i class="bi bi-journal-x" style="font-size: 5rem; color: #ccc;"></i>
  </div>
  
  <h2 class="fs-1 fw-bold text-secondary">No Courses Available</h2>
  <p class="text-muted mb-4">There are currently no courses available in the system.</p>
  
  <% if current_user.instructor? || current_user.admin? %>
    <div class="mt-4">
      <%= link_to new_course_path, class: 'btn btn-primary btn-lg px-4' do %>
        <i class="bi bi-plus-circle me-2"></i> Add Your First Course
      <% end %>
    </div>
    <p class="text-muted mt-3 small">Start by creating a new course for students to enroll.</p>
  <% else %>
    <div class="alert alert-info d-inline-block">
      <i class="bi bi-info-circle me-2"></i>
      Please check back later when instructors have added courses.
    </div>
  <% end %>
</div>